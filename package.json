{
  "name": "rat.fun",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Moving-Castles/rat.fun.git"
  },
  "scripts": {
    "build": "NODE_OPTIONS=--max-old-space-size=4096 pnpm recursive run build",
    "build:libs": "pnpm --filter 'doppler' --filter '@ratfun/webgl' --filter '@ratfun/shared-utils' --filter 'drawbridge' --filter 'common' run build",
    "build:client": "NODE_OPTIONS=--max-old-space-size=4096 pnpm --filter 'client' run build",
    "check": "pnpm --filter '@ratfun/shared-ui' --filter 'client' --filter 'claim-frontend' --filter 'exchange-frontend' --filter 'auction-frontend' --filter 'server' --filter 'websocket-server' --filter 'query-server' run check",
    "lint": "pnpm --filter 'client' --filter 'claim-frontend' --filter 'exchange-frontend' --filter 'auction-frontend' --filter 'server' --filter 'websocket-server' --filter 'query-server' run lint",
    "dev": "mprocs",
    "dev:client": "pnpm --filter 'client' run dev",
    "dev:contracts": "pnpm --filter 'contracts' run dev",
    "foundry:up": "curl -L https://foundry.paradigm.xyz | bash && bash $HOME/.foundry/bin/foundryup",
    "mud:up": "pnpm mud set-version --tag main && pnpm install",
    "prepare": "(forge --version || pnpm foundry:up) && husky install",
    "test": "pnpm recursive run test",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@latticexyz/cli": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/common": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/explorer": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@latticexyz/store-indexer": "2.2.23-94cac741be24bb5743f2f36235cc3bb40012417a",
    "@typescript-eslint/eslint-plugin": "8.52.0",
    "@typescript-eslint/parser": "8.52.0",
    "eslint": "9.39.2",
    "husky": "^9.1.7",
    "mprocs": "^0.8.2",
    "prettier": "^3.7.4",
    "prettier-plugin-solidity": "^2.2.1",
    "prettier-plugin-svelte": "^3.4.1",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
