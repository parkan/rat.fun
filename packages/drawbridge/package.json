{
  "name": "drawbridge",
  "version": "2.2.23-local",
  "description": "Headless wallet connection and session management for MUD - based on @latticexyz/entrykit",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Moving-Castles/rat.fun.git",
    "directory": "packages/drawbridge"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:js",
    "build:js": "tsup",
    "clean": "pnpm run clean:js",
    "clean:js": "shx rm -rf dist",
    "dev": "tsup --watch",
    "test": "tsc --noEmit && vitest",
    "test:ci": "tsc --noEmit && vitest --run"
  },
  "dependencies": {
    "@account-abstraction/contracts": "^0.7.0",
    "@latticexyz/common": "2.2.23",
