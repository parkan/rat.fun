    "@latticexyz/world": "2.2.23",
    "@latticexyz/world-module-callwithsignature": "2.2.23",
    "@wagmi/core": "2.22.1",
    "permissionless": "0.2.30",
    "wagmi": "2.19.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "shx": "^0.4.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "viem": "2.39.0"
  },
  "peerDependencies": {
    "viem": "2.x"
  },
  "publishConfig": {
    "access": "public"
  }
