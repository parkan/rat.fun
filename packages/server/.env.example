# Server
PORT=3131
ENVIRONMENT_NAME=development
APP_VERSION=development

# LOG_LEVEL controls logging behavior:
# 0 = no output
# 1 = console.log only (default)
# 2 = sanity only (logs written to CMS)
# 3 = console.log and sanity
LOG_LEVEL=1

# Sentry Configuration
# Required for error tracking - leave empty for local development
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# LLM
ANTHROPIC_API_KEY=sk-XXXX # get from https://console.anthropic.com/
EVENT_MODEL=claude-sonnet-4-20250514
CORRECTION_MODEL=claude-sonnet-4-20250514
CHALLENGE_MODEL=claude-opus-4-5-20251101
EVENT_TEMPERATURE=0.5
CHALLENGE_TEMPERATURE=0.5
CORRECTION_TEMPERATURE=0
LLM_MAX_TOKENS=4096

# Private key
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 # default anvil account

# Chain ID 
CHAIN_ID=31337 # anvil
RPC_URL=http://127.0.0.1:8545

# Optional, will override mud config
# WORLD_ADDRESS=0x...
# INITIAL_BLOCK=0

# Sanity CMS
PRIVATE_SANITY_CMS_ID=XXXX
PRIVATE_SANITY_CMS_TOKEN=skXXXX
PUBLIC_SANITY_CMS_ID=XXXX
PUBLIC_SANITY_CMS_TOKEN=skXXXX

# Replicate (used for image generation)
# get from https://replicate.com/
REPLICATE_API_TOKEN=XXXX