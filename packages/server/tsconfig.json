{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config"],
      "@routes/*": ["src/routes/*"],
      "@modules/*": ["src/modules/*"],
      "@sanity-private-cms-types": ["../cms-private/sanity.types"],
      "@sanity-public-cms-types": ["../cms-public/sanity.types"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "../cms-private/**/*", "../cms-public/**/*"]
}
