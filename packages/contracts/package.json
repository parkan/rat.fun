{
  "name": "contracts",
  "version": "0.2.0",
  "license": "MIT",
  "scripts": {
    "build": "tsx ./script/generate-external-tables.ts && mud build",
    "clean": "forge clean && shx rm -rf src/**/codegen",
    "deploy:base-sepolia": "mud deploy --profile=base-sepolia --forgeScriptOptions='--slow'",
    "deploy:base-mainnet": "mud deploy --profile=base-mainnet --forgeScriptOptions='--slow'",
    "deploy:local": "mud deploy",
    "dev": "mud dev-contracts",
    "mud-test-gas-report": "GAS_REPORTER_ENABLED=true mud test | pnpm gas-report --stdin --save gas-report.json",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "forge clean && tsc --noEmit && mud test",
    "test-verbose": "forge clean && tsc --noEmit && mud test --forgeOptions=' -vvv'",
    "test-single": "forge clean && tsc --noEmit && mud test --forgeOptions='--match-test testCreateRoom'"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@latticexyz/cli": "2.2.23-a8c404b4b10462f5f390a82f9e40ceb80bc5eb23",
    "@latticexyz/gas-report": "2.2.23-a8c404b4b10462f5f390a82f9e40ceb80bc5eb23",
    "@latticexyz/schema-type": "2.2.23-a8c404b4b10462f5f390a82f9e40ceb80bc5eb23",
    "@latticexyz/store": "2.2.23-a8c404b4b10462f5f390a82f9e40ceb80bc5eb23",
    "@latticexyz/world": "2.2.23-a8c404b4b10462f5f390a82f9e40ceb80bc5eb23",
    "@latticexyz/world-modules": "2.2.23-a8c404b4b10462f5f390a82f9e40ceb80bc5eb23",
    "@openzeppelin/contracts": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "solhint": "^5.1.0",
    "solhint-config-mud": "2.2.23-a8c404b4b10462f5f390a82f9e40ceb80bc5eb23",
    "solhint-plugin-mud": "2.2.23-a8c404b4b10462f5f390a82f9e40ceb80bc5eb23",
    "tsx": "4.19.4"
  }
}
